{
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "node",
    "target": "es5",
    "newLine": "LF",
    "baseUrl": ".",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "snapshots"
  ]
}